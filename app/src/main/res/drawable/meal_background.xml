<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:startColor="#E4F9FCFF"
        android:endColor="#5C79A4EF"
        android:angle="45"/> <!-- Arkaplan için bir gradient renk geçişi -->

    <corners
        android:radius="16dp" /> <!-- Köşelerin yuvarlaklığı -->

    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" /> <!-- İçerik ile kenarlıklar arasındaki boşluk -->

    <stroke
        android:color="#00000000"
        android:width="1dp" /> <!-- Kenarlık rengi ve kalınlığı -->
</shape>
